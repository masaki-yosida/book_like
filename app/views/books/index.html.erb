<!-- app/views/books/index.html.erb -->
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>作者</th>
      <th>題名</th>
      <th>概要</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= Author.find(book.author_id).name %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Book', new_book_path %>
<%= link_to 'トップに戻る', posts_path %>

