<h1>New Book</h1>
<%= form_with(model: @book, local: true) do |form| %>
  <div class="field">
    <%= form.label :author_id %>
    <%= form.collection_select :author_id, Author.all, :id, :name, prompt: '選択してください' %>
  </div>
  <div class="field">
    <%= form.label :タイトル %>
    <%= form.text_field :title, required: true %>
  </div>
  <div class="field">
    <%= form.label :概要 %>
    <%= form.text_area :description %>
  </div>
  <!-- Remove the extra <% end %> here -->
  <%= form_for @book do |form| %>
    <!-- Other form fields -->
    <%= form.hidden_field :author_id, value: @book.author_id %>
    <%= form.submit '新規登録' %>
  <% end %>
  <%= link_to 'トップに戻る', posts_path %>
