<body>
<div id="particles-js"></div>
<div id="wrapper">
<h1>New Book</h1>
<%= form_with(model: @book, local: true) do |form| %>

<div class="field">
  <%= form.label :author_id %>
  <%= form.collection_select :author_id, Author.all, :id, :name, prompt: '選択してください' , class: "author-select" %>
</div>
  <div class="field">
    <%= form.label :タイトル %>
    <%= form.text_field :title, required: true,class: "author-select" %>
  </div>

  <div class="field">
    <%= form.label :概要 %>
    <%= form.text_area :description,class: "author-select" %>
  </div>

  <div class="actions">
    <%= form.submit "新規登録",class: "search-button", data: { turbo: false } %>
  </div>
<% end %>

<%= link_to 'トップに戻る', posts_path,class: "search-button", data: { turbo: false } %>
<p class=masa>© 2024 Masaki_yoshida.</p>
<!--/wrapper--></div>
<script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
